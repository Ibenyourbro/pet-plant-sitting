{
  "env": {
    "es6": true,
    "node": true
  },
  "settings": {
    "react": {
      "version": "detect"
    },
  },
  "parserOptions": {
    "sourceType": "module",
    "project": "./tsconfig.json",
    "ecmaVersion": 2021,
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "ignorePatterns": [".eslint*", "./client/build/*", "node_modules"],
  "extends": ["airbnb", "airbnb-typescript", "plugin:@typescript-eslint/eslint-recommended",
    "plugin:@typescript-eslint/recommended"]
}